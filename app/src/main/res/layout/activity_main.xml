<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.enesigneci.giphyapiconsumer.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Aramak istediğiniz görselle ilgili birşeyler yazın"
        android:layout_alignParentTop="true"
        android:id="@+id/et_gif_name"/>

    <ImageView
        android:id="@+id/iv_current"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="visible"
        android:layout_below="@+id/et_gif_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp" />

    <Button
        android:id="@+id/btn_fetch_gif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="GIF Getir" />

</RelativeLayout>
